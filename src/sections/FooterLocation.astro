---
import Facebook from '../../public/icons/Facebook.astro';
import Instagram from '../../public/icons/Instagram.astro';
import Twitter from '../../public/icons/Twitter.astro';
---
<footer class="bg-primary text-secondary w-full h-full">
    <div class="w-[90%] max-w-[1110px] mx-auto py-10 flex flex-col justify-between gap-10 md:flex-row">
        <div class="flex flex-col justify-between gap-10 md:gap-0 md:flex-row md:w-[70%] lg:w-[60%]">
            <h3 class="text-2xl min-w-[120px] max-w-[120px] xl:3xl">Modern Art Gallery</h3>
            <p class="text-base xl:text-lg max-w-[290px] lg:max-w-[400px]">The Modern Art Gallery is free to all visitors and open seven days a week from 8am to 9pm. Find us at 99 King Street, Newport, USA.</p>
        </div>
        <div class="w-[100px] flex items-start justify-between">
            <a href="#">
                <Facebook class="fill-secondary"></Facebook>
            </a>

            <a href="#">
                <Instagram class="fill-secondary"></Instagram>
            </a>
            <a href="#">
                <Twitter class="fill-secondary"></Twitter>
            </a>
        </div>
    </div>
</footer>
